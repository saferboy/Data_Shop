model Category {
    id    Int     @id @default(autoincrement())
    title String
    icon  File[]
    brand Brand[]
}

model Brand {
    id         Int       @id @default(autoincrement())
    title      String
    icon       File[]
    Category   Category? @relation(fields: [categoryId], references: [id])
    categoryId Int?
}

model File {
    id       Int    @id @default(autoincrement())
    path     String
    filename String

    category   Category? @relation(fields: [categoryId], references: [id])
    categoryId Int?
    brand      Brand?    @relation(fields: [brandId], references: [id])
    brandId    Int?
}
